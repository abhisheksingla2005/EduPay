<div class="max-w-3xl mx-auto">
  <h2 class="text-2xl font-semibold mb-4">Create Funding Request</h2>
  <% if (error) { %><div class="mb-3 px-4 py-3 rounded-lg bg-red-50 text-red-700 border border-red-200"><%= error %></div><% } %>
  <form method="post" action="/student/create-request" class="space-y-4">
    <div>
      <label class="block text-sm font-medium mb-1">Title *</label>
      <input class="w-full rounded-lg border border-slate-300 dark:border-slate-700 bg-white/80 dark:bg-slate-900/60 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" name="title" required />
    </div>
    <div>
      <label class="block text-sm font-medium mb-1">Description *</label>
      <textarea class="w-full rounded-lg border border-slate-300 dark:border-slate-700 bg-white/80 dark:bg-slate-900/60 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" name="description" rows="4" required></textarea>
    </div>
    <div class="grid md:grid-cols-2 gap-4">
      <div>
        <label class="block text-sm font-medium mb-1">Amount Requested (â‚¹) *</label>
        <input type="number" class="w-full rounded-lg border border-slate-300 dark:border-slate-700 bg-white/80 dark:bg-slate-900/60 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" name="amountRequested" min="1" required />
      </div>
      <div>
        <label class="block text-sm font-medium mb-1">Deadline (optional)</label>
        <input type="date" class="w-full rounded-lg border border-slate-300 dark:border-slate-700 bg-white/80 dark:bg-slate-900/60 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" name="deadline" />
      </div>
    </div>
    <button class="px-5 py-2.5 rounded-lg bg-indigo-600 hover:bg-indigo-500 text-white shadow">Create</button>
  </form>
</div>
