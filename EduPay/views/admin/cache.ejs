<div class="max-w-7xl mx-auto">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-3xl font-bold text-slate-800 dark:text-white">Redis Cache Monitor</h1>
      <p class="text-slate-600 dark:text-slate-400 mt-1">View cached data stored in Redis server</p>
    </div>
    <% if (redisEnabled) { %>
      <div class="bg-green-50 dark:bg-green-900/20 px-4 py-2 rounded-lg border border-green-200 dark:border-green-800">
        <span class="text-green-700 dark:text-green-400 font-semibold">üü¢ Redis Connected</span>
      </div>
    <% } else { %>
      <div class="bg-red-50 dark:bg-red-900/20 px-4 py-2 rounded-lg border border-red-200 dark:border-red-800">
        <span class="text-red-700 dark:text-red-400 font-semibold">üî¥ Redis Disabled</span>
      </div>
    <% } %>
  </div>

  <% if (!redisEnabled) { %>
    <div class="bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 rounded-lg p-6 mb-6">
      <div class="flex items-start gap-3">
        <svg class="w-6 h-6 text-yellow-600 dark:text-yellow-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
        </svg>
        <div>
          <h3 class="font-semibold text-yellow-800 dark:text-yellow-300 mb-1">Redis Not Configured</h3>
          <p class="text-yellow-700 dark:text-yellow-400"><%= message %></p>
          <div class="mt-3 bg-slate-800 text-slate-100 px-4 py-2 rounded font-mono text-sm">
            REDIS_URL=redis://localhost:6379
          </div>
        </div>
      </div>
    </div>
  <% } %>

  <% if (typeof error !== 'undefined' && error) { %>
    <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4 mb-6">
      <p class="text-red-700 dark:text-red-400"><%= error %></p>
    </div>
  <% } %>

  <% if (redisEnabled) { %>
    <div class="bg-white dark:bg-slate-800 rounded-lg shadow-sm border border-slate-200 dark:border-slate-700 p-6 mb-6">
      <h2 class="text-xl font-semibold mb-4 text-slate-800 dark:text-white">Cache Statistics</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="bg-blue-50 dark:bg-blue-900/20 p-4 rounded-lg border border-blue-200 dark:border-blue-800">
          <p class="text-blue-600 dark:text-blue-400 text-sm font-medium">Total Cached Keys</p>
          <p class="text-3xl font-bold text-blue-700 dark:text-blue-300 mt-1"><%= totalKeys || 0 %></p>
        </div>
        <div class="bg-purple-50 dark:bg-purple-900/20 p-4 rounded-lg border border-purple-200 dark:border-purple-800">
          <p class="text-purple-600 dark:text-purple-400 text-sm font-medium">Student Dashboards</p>
          <p class="text-3xl font-bold text-purple-700 dark:text-purple-300 mt-1">
            <%= keys.filter(k => k.key.startsWith('student:')).length %>
          </p>
        </div>
        <div class="bg-emerald-50 dark:bg-emerald-900/20 p-4 rounded-lg border border-emerald-200 dark:border-emerald-800">
          <p class="text-emerald-600 dark:text-emerald-400 text-sm font-medium">Donor Dashboards</p>
          <p class="text-3xl font-bold text-emerald-700 dark:text-emerald-300 mt-1">
            <%= keys.filter(k => k.key.startsWith('donor:')).length %>
          </p>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-slate-800 rounded-lg shadow-sm border border-slate-200 dark:border-slate-700">
      <div class="px-6 py-4 border-b border-slate-200 dark:border-slate-700">
        <h2 class="text-xl font-semibold text-slate-800 dark:text-white">Cached Entries</h2>
        <p class="text-sm text-slate-600 dark:text-slate-400 mt-1">Keys stored in Redis with their values and TTL</p>
      </div>

      <% if (keys.length === 0) { %>
        <div class="p-8 text-center text-slate-500 dark:text-slate-400">
          <svg class="w-16 h-16 mx-auto mb-4 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
          </svg>
          <p class="text-lg font-medium">No cached data</p>
          <p class="text-sm mt-1">Visit student or donor dashboards to populate the cache</p>
        </div>
      <% } else { %>
        <div class="divide-y divide-slate-200 dark:divide-slate-700">
          <% keys.forEach((item, index) => { %>
            <div class="p-6 hover:bg-slate-50 dark:hover:bg-slate-700/50 transition">
              <div class="flex items-start justify-between mb-3">
                <div class="flex-1">
                  <div class="flex items-center gap-2">
                    <span class="font-mono text-sm font-semibold text-indigo-600 dark:text-indigo-400"><%= item.key %></span>
                    <% if (item.key.startsWith('student:')) { %>
                      <span class="px-2 py-0.5 bg-purple-100 dark:bg-purple-900/30 text-purple-700 dark:text-purple-300 text-xs rounded">Student</span>
                    <% } else if (item.key.startsWith('donor:')) { %>
                      <span class="px-2 py-0.5 bg-emerald-100 dark:bg-emerald-900/30 text-emerald-700 dark:text-emerald-300 text-xs rounded">Donor</span>
                    <% } %>
                  </div>
                  <p class="text-xs text-slate-500 dark:text-slate-400 mt-1">
                    <% if (item.ttl > 0) { %>
                      Expires in <strong><%= item.ttl %> seconds</strong>
                    <% } else if (item.ttl === -1) { %>
                      No expiration
                    <% } else { %>
                      Expired
                    <% } %>
                  </p>
                </div>
              </div>
              
              <div class="bg-slate-100 dark:bg-slate-900 rounded-lg p-4 overflow-auto">
                <pre class="text-xs font-mono text-slate-700 dark:text-slate-300 whitespace-pre-wrap"><%= JSON.stringify(item.value, null, 2) %></pre>
              </div>
            </div>
          <% }); %>
        </div>
      <% } %>
    </div>

    <div class="mt-6 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4">
      <h3 class="font-semibold text-blue-800 dark:text-blue-300 mb-2">üìñ How Caching Works</h3>
      <ul class="text-sm text-blue-700 dark:text-blue-400 space-y-1">
        <li>‚Ä¢ <strong>student:dashboard:{userId}</strong> - Cached for 60 seconds</li>
        <li>‚Ä¢ <strong>donor:dashboard:open</strong> - Cached for 30 seconds (no search query)</li>
        <li>‚Ä¢ Cache is automatically invalidated when data changes (create/update/delete/donate)</li>
        <li>‚Ä¢ If Redis is unavailable, app continues without caching</li>
      </ul>
    </div>
  <% } %>

  <div class="mt-6 flex gap-3">
    <a href="/admin/dashboard" class="px-4 py-2 bg-slate-200 dark:bg-slate-700 hover:bg-slate-300 dark:hover:bg-slate-600 text-slate-800 dark:text-slate-200 rounded-lg font-medium transition">
      ‚Üê Back to Dashboard
    </a>
    <% if (redisEnabled && keys.length > 0) { %>
      <button onclick="window.location.reload()" class="px-4 py-2 bg-indigo-600 hover:bg-indigo-500 text-white rounded-lg font-medium transition">
        üîÑ Refresh
      </button>
    <% } %>
  </div>
</div>
